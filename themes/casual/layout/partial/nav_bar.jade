.site-nav
  span.button-toggle
    span
  include nav_menus
  form#search-form.nav-item
    label.trigger-btn(for="local-search-input")
      i(class=['fa', 'fa-search'])
    input(
      type="text"
      id="local-search-input"
      name="q"
      results="0"
      placeholder=__('search')
      class="search form-control"
      autocomplete="off"
      autocorrect="off"
      required
    )
    i#local-search-reset(
      class=['fa', 'fa-close']
      onclick="resetSearch()"
    )
    div#local-search-result
